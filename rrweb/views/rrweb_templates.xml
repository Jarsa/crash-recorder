<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_common" inherit_id="web.assets_common">
        <xpath expr="." position="inside">
            <script src="https://cdn.jsdelivr.net/npm/rrweb@0.8.5/dist/rrweb.min.js"></script>
            <script type="text/javascript" src="/rrweb/static/src/js/rrweb.js"></script>
        </xpath>
    </template>

    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/rrweb-player@0.5.2/dist/style.css"/>
            <script src="https://cdn.jsdelivr.net/npm/rrweb-player@0.5.2/dist/index.js"></script>
            
            <script type="text/javascript" src="/rrweb/static/src/js/rrweb_field.js"></script>
        </xpath>
    </template>
</odoo>
